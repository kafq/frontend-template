{
  "defaultSeverity": "warning",
  "extends": [
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint:recommended"
  ],
  "rules": {
    "curly": true,
    "quotemark": false,
    "align": false,
    "semicolon": false,
    "member-access": false,
    "interface-name": [true, "never-prefix"],
    "ordered-imports": false,
    "no-switch-case-fall-through": true,
    "switch-default": true,
    "interface-over-type-literal": true,
    "object-literal-sort-keys": false,
    "arrow-parens": false,
    "ter-arrow-parens": false,
    "esSpecCompliant": true,
    "no-var-requires": false,
    "object-literal-shorthand": false,
    "no-console": [
      true,
      "log",
      "warn",
      "debug",
      "dir",
      "trace"
    ],
    /* Import names are currently under discussion of being improved.
    This will be a workaround to not flag an error for misnamed libs.
     */
    "import-name": false,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}],
    "variable-name": [
      true,
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  },
  "jsRules": {
    "esSpecCompliant": true,
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "./scripts/render-assets.js"
    ]
  }
}
